
@{
    ViewData["Title"] = "Index";
}

<img class="avatar avatar-128 img-circle img-thumbnail" style="width:245px;height:250px;" src="@ViewData["AvatarPath"]" />
<form asp-action="AddImage" asp-controller="Personal" method="post" enctype="multipart/form-data">
    <div>
        <div class="form-group">
            @*<label for="avatar" class="form-control">Выберите картинку для загрузки</label>*@
            <label class="btn btn-default">
                <input id="Avatar" type="file" name="uploadedFile" accept="image/*"/>
                <input type="submit" value="Загрузить" class="btn btn-primary" />
            </label>
            @*<input id="Avatar" type="file" name="uploadedFile" value="Выберите картинку для загрузки" class="form-control" /><br>*@
        </div>
        @*<input type="submit" value="Загрузить" class="btn btn-primary" />*@
    </div>
</form>
<br>
<div>
    <label>ФИО:</label>
    @if (ViewData["FIO"] != null)
    {
        <span>@ViewData["FIO"]</span>
    }
    <br>
    <label>Дата рождения:</label>
    @if (ViewData["DateBirth"] != null)
    {
        <span>@ViewData["DateBirth"]</span>
    }
    <br>
    <label>Полных лет:</label>
    @if (ViewData["Age"] != null)
    {
        <span>@ViewData["Age"]</span>
    }
    <br>
    <label>Телефон:</label>
    @if (ViewData["Telephone"] != null)
    {
        <span>@ViewData["Telephone"]</span>
    }
    <br>
    @if (ViewData["UserType"] != null)
    {
        @if (ViewData["UserType"].ToString() == "Student")
        {
            <label>Класс:</label>
            @if (ViewData["NumberClass"] != null)
            {
                <span>@ViewData["NumberClass"]</span>
            }
            <br>
        }
        else if (ViewData["UserType"].ToString() == "Teacher")
        {
            <label>Предмет преподавания:</label>
            @if (ViewData["SubjectName"] != null)
            {
                <span>@ViewData["SubjectName"]</span>
            }
            <br>
        }
    }
</div>
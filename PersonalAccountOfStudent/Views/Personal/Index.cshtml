@model PersonalInfoView
@{
    ViewData["Title"] = "Index";
}

<img class="avatar avatar-128 img-circle img-thumbnail" style="width:295px;height:265px;" src="@Model.AvatarPath" />
<form asp-action="AddImage" asp-controller="Personal" method="post" enctype="multipart/form-data">
    <div>
        <div class="form-group">
            <label class="btn btn-default">
                <input id="Avatar" type="file" name="uploadedFile" accept="image/*" />
                <input type="submit" value="Загрузить" class="btn btn-primary" />
            </label>
        </div>
    </div>
</form>
<div>
    @if (Model != null)
    {
        <label>ФИО:</label>
        @if (Model.FIO != null)
        {
            <span>@Model.FIO</span>
        }
        <br>
        <label>Дата рождения:</label>
        @if (Model.DateBirth != null)
        {
            <span>@Model.DateBirth</span>
        }
        <br>
        <label>Полных лет:</label>
        @if (Model.Age != null)
        {
            <span>@Model.Age</span>
        }
        <br>
        <label>Телефон:</label>
        @if (Model.Telephone != null)
        {
            <span>@Model.Telephone</span>
        }
        <br>
        @if (Model.UserType != null)
        {
            @if (Model.UserType == "Student")
            {
                <label>Класс:</label>
                @if (Model.NumberClass != null)
                {
                    <span>@Model.NumberClass</span>
                }
                <br>
            }
            else if (Model.UserType == "Teacher")
            {
                <label>Предмет преподавания:</label>
                @if (Model.SubjectName != null)
                {
                    <span>@Model.SubjectName</span>
                }
                <br>
            }
        }
    }
</div>
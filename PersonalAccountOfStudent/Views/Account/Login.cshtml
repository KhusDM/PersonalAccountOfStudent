@{
    ViewData["Title"] = "Login";
}
@model LoginModel
<div class="form-align">
    <h2>Вход на сайт</h2>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="Login">Введите логин</label>
                <input type="text" asp-for="Login" class="form-control" placeholder="Логин" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Password" />
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </form>
</div>